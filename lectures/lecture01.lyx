\begin_deeper
\begin_layout Itemize
Denote vector space of all 
\begin_inset Formula $m$
\end_inset

-by-
\begin_inset Formula $n$
\end_inset

 real matrices by 
\begin_inset Formula $\mathbb{R}^{m\times n}$
\end_inset

.
 
\begin_inset Formula 
\[
A\in\mathbb{R}^{m\times n}\Leftrightarrow A=\left(a_{ij}\right)=\left[\begin{array}{cccc}
a_{11} & a_{12} & \dots & a_{1n}\\
a_{21} & a_{22} & \dots & a_{2n}\\
\vdots & \vdots & \ddots & \vdots\\
a_{m1} & a_{m2} & \dots & a_{mn}
\end{array}\right]
\]

\end_inset


\end_layout

\begin_layout Itemize
Denote vector space of all real 
\begin_inset Formula $n$
\end_inset

-vectors by 
\begin_inset Formula $\mathbb{R}^{n}$
\end_inset

, or 
\begin_inset Formula $\mathbb{R}^{n\times1}$
\end_inset

 
\begin_inset Formula 
\[
x\in\mathbb{R}^{n}\Leftrightarrow x=\left[\begin{array}{c}
x_{1}\\
x_{2}\\
\vdots\\
x_{n}
\end{array}\right]
\]

\end_inset


\end_layout

\begin_layout Itemize
Transposition (
\begin_inset Formula $\mathbb{R}^{m\times n}\rightarrow\mathbb{R}^{n\times m}$
\end_inset

): 
\begin_inset Formula $C=A^{T}\Rightarrow c_{ij}=a_{ji}$
\end_inset


\end_layout

\begin_layout Itemize
Row vectors are transpose of column vectors and are in 
\begin_inset Formula $\mathbb{R}^{1\times n}$
\end_inset


\end_layout

