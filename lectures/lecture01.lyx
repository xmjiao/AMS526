\begin_inset Formula 
\[
\mbox{span}\{a_{1},\dots,a_{n}\}=\left\{ \sum_{j=1}^{n}\beta_{j}a_{j}\mid\beta_{j}\in\mathbb{R}\right\} 
\]

\end_inset


\begin_inset Separator latexpar
\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Space spanned by 
\begin_inset Formula $n$
\end_inset

-vectors is a 
\emph on
subspace
\emph default
 of 
\begin_inset Formula $\mathbb{R}^{n}$
\end_inset


\end_layout

\begin_layout Itemize
If 
\begin_inset Formula $\{a_{1},\dots,a_{n}\}$
\end_inset

