\end_layout

\begin_deeper
\begin_layout Itemize
General 
\begin_inset Formula $\vec{A}$
\end_inset

: First convert to 
\emph on
upper-Hessenberg
\emph default
 form, then to upper triangular
\size tiny
 
\begin_inset Formula 
\[
\underset{\vec{A}\neq\vec{A}^{*}}{\left[\begin{array}{ccccc}
\times & \times & \times & \times & \times\\
\times & \times & \times & \times & \times\\
\times & \times & \times & \times & \times\\
\times & \times & \times & \times & \times\\
\times & \times & \times & \times & \times
\end{array}\right]}\underrightarrow{\mbox{Phase 1}}\underset{\mbox{upper-Hessenberg}}{\left[\begin{array}{ccccc}
\times & \times & \times & \times & \times\\
\times & \times & \times & \times & \times\\
 & \times & \times & \times & \times\\
 &  & \times & \times & \times\\
 &  &  & \times & \times
\end{array}\right]}\underrightarrow{\mbox{Phase 2}}\underset{\mbox{triangular}}{\left[\begin{array}{ccccc}
\times & \times & \times & \times & \times\\
 & \times & \times & \times & \times\\
 &  & \times & \times & \times\\
 &  &  & \times & \times\\
 &  &  &  & \times
\end{array}\right]}
\]

\end_inset


\end_layout

\begin_layout Itemize
Hermitian 
\begin_inset Formula $\vec{A}$
\end_inset

: First convert to 
\emph on
tridiagonal
\emph default
 form, then to diagonal
\size tiny
 
\begin_inset Formula 
\[
\underset{\vec{A}=\vec{A}^{*}}{\left[\begin{array}{ccccc}
\times & \times & \times & \times & \times\\
\times & \times & \times & \times & \times\\
\times & \times & \times & \times & \times\\
\times & \times & \times & \times & \times\\
\times & \times & \times & \times & \times
\end{array}\right]}\underrightarrow{\mbox{Phase 1}}\underset{\mbox{tridiagonal}}{\left[\begin{array}{ccccc}
\times & \times\\
\times & \times & \times\\
 & \times & \times & \times\\
 &  & \times & \times & \times\\
 &  &  & \times & \times
\end{array}\right]}\underrightarrow{\mbox{Phase 2}}\underset{\mbox{diagonal}}{\left[\begin{array}{ccccc}
\times\\
 & \times\\
 &  & \times\\
 &  &  & \times\\
 &  &  &  & \times
\end{array}\right]}
\]

\end_inset


\end_layout

\begin_layout Itemize
In general, phase 1 is direct and requires 
\begin_inset Formula $O(n^{3})$
\end_inset

 flops, and phase 2 is iterative and requires 
\begin_inset Formula $O(n)$
\end_inset

 iterations, and 
\begin_inset Formula $O(n^{3})$
\end_inset

 flops for non-Hermitian matrices and 
\begin_inset Formula $O(n^{2})$
\end_inset

 flops for Hermitian matrices
\end_layout

\end_deeper
